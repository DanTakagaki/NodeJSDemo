    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Local App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/basics-locally/app.js",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "MySQL App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/basics-mysql/app.js",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/basics-mysql/.env",
            "env": {
                "PORT": "4000",
                "NODE_ENV": "development"
            }
        }
    ]
}